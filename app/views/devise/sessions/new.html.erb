<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 mb-3">Back to save the world ?</h1>
        <p class="col-lg-10 fs-4">Enter your email and password to begin...</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">



      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),  :html=> { class: "p-4 p-md-5 border rounded-3 bg-light"}) do |f| %>
        <%= f.error_notification %>

        <div class="form-floating mb-3">

        
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label:false,
                        placeholder: "Email Address",
                        input_html: { autocomplete: "email" },
                        class: "form-control signup_special_fields"
            %>
        </div>

        <div class="form-floating mb-3">
      
            <%= f.input :password,

                        required: true,
                        label:false,
                        placeholder: "Password",
                        input_html: { autocomplete: "current-password" } ,
                        class: "form-control signup_special_fields"
            %>

        </div>

             <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

            <%= f.button :submit, "Login", class:"w-100 btn btn-lg btn-primary" %>

          <hr class="my-4">
          <small class="text-muted">By clicking Login up, you agree to the terms of use.</small>

          </div>
       </div>
      <% end %>
      </div>
    </div>
  </div>
