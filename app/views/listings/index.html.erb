
<h1>All Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Picture</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Status</th>
      <th>Location</th>
      <th>Create at</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= image_tag listing.pictures.first, class: "img-thumbnail" %></td>
        <td><%= listing.title %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><%= listing.status %></td>
        <td><%= listing.location %></td>
        <td><%= listing.create_at %></td>
        <td><%= listing.buyer_id %></td>
        <td><%= listing.seller_id %></td>
        <td><%= listing.profile_id %></td>
        <td><%= link_to 'Show', listing, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-warning" %></td>
        <td><%= link_to 'Delete', listing, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

