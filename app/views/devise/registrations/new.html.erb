<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 mb-3">Vertically centered hero sign-up form</h1>
        <p class="col-lg-10 fs-4">Below is an example form built entirely with Bootstrapâ€™s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">



      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),  :html=> { class: "p-4 p-md-5 border rounded-3 bg-light"}) do |f| %>
        <%= f.error_notification %>

        <div class="form-floating mb-3">

        
            <%= f.input :email,
                        id: "floatingInput",
                        required: true,
                        autofocus: true,
                        label:false,
                        input_html: { autocomplete: "email" },
                        class: "form-control signup_special_fields"
            %>
            <label for="floatingInput">Email address</label>
      
            <%= f.input :password,
                        id: "floatingPassword1",
                        required: true,
                        label:false,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } ,
                        class: "form-control signup_special_fields"
            %>

            <label for="floatingPassword1">Password</label>

            <%= f.input :password_confirmation,
                        id: "floatingPassword2",
                        label: false,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        class: "form-control signup_special_fields" 
            %>

            <label for="floatingPassword2">Password</label>

            <%= f.hidden_field :user_type, value: @user_type %>

            <%= f.button :submit, "Sign up", class:"w-100 btn btn-lg btn-primary" %>

          <hr class="my-4">
          <small class="text-muted">By clicking Sign up, you agree to the terms of use.</small>

          </div>
       </div>
      <% end %>


