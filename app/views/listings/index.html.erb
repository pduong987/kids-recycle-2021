
<div class="container">
  <div class="row">
    <div class="col col-lg-2 col-sm-1">
      
    </div>
    <div class="col col-lg-8 col-sm-10">
      <h1>All Items</h1>

      <%= render 'partials/search' %>

      <table class="table">
        <thead>
          <tr>
            <th>Picture</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Status</th>
            <th>Location</th>
            <% if current_user && current_user.profile %>
            <th>Create at</th>
            <th>Buyer</th>
            <th>Seller</th>
            <th colspan="1"></th>
            <%end%>
          </tr>
        </thead>

        <tbody>
          <% @listings.each do |listing| %>
            <tr>
              <td>
                <% if listing.pictures && listing.pictures.first%>
                  <%= image_tag listing.pictures.first, class: "img-thumbnail" %>
                <%end%>
              </td>
              <td><%= listing.title %></td>
              <td><%= listing.description %></td>
              <td><%= listing.price %></td>
              <td><%= listing.status %></td>
              <td><%= listing.location %></td>
              <% if current_user && current_user.profile %>
              <td><%= listing.create_at %></td>
              <td><%= listing.buyer_id %></td>
              <td><%= listing.seller_id %></td>
              <td><%= link_to 'Detail', listing, class: "btn btn-success" %></td>
              <%end%>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <% if current_user && current_user.profile %>
      <%= link_to 'New Listing', new_listing_path %>
      <%end%>

    </div>
    <div class="col col-lg-2 col-sm-1">
      
    </div>
  </div>
</div>